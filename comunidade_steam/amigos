USE steam;
SELECT 
    u1.Nome AS Usuario_Nome,
    GROUP_CONCAT(u2.Nome ORDER BY u2.Nome ASC) AS Amigos
FROM 
    amigos
JOIN 
    usuario u1 ON amigos.ID_usuario1 = u1.ID_Usuario
JOIN 
    usuario u2 ON amigos.ID_usuario2 = u2.ID_Usuario
GROUP BY 
    u1.ID_Usuario;

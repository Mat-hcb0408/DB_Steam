SELECT 
    c.ID_Compra, 
    c.ID_Usuario, 
    c.Data_Compra, 
    c.Metodo_Pagamento, 
    j.Nome AS Nome_do_Jogo, 
    p.Preco AS Preco_do_Jogo
FROM Compra c
JOIN Jogo j ON c.ID_Jogo = j.App_ID
JOIN Preco p ON c.Preco_ID = p.Preco_ID;
